<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefaultCardView">
        <item name="cardCornerRadius">@dimen/default_card_view_corner_radius</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:drawSelectorOnTop">true</item>
        <!--<item name="cardElevation">@dimen/default_card_view_elevation</item>-->
        <item name="cardBackgroundColor">@color/bg_white</item>
    </style>

    <style name="DefaultButton">
        <item name="android:paddingLeft">@dimen/default_margin_padding_large</item>
        <item name="android:paddingRight">@dimen/default_margin_padding_large</item>
        <item name="android:minWidth">@dimen/default_button_minimum_width</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/default_text_body_normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BlueButton" parent="DefaultButton">
        <item name="android:background">@drawable/selector_button_blue</item>
    </style>

    <style name="GreenButton" parent="DefaultButton">
        <item name="android:background">@drawable/selector_button_green</item>
    </style>

    <style name="YellowButton" parent="DefaultButton">
        <item name="android:background">@drawable/selector_button_yellow</item>
    </style>

    <style name="WhiteButton" parent="DefaultButton">
        <item name="android:background">@drawable/selector_button_white</item>
    </style>

    <style name="BlueGrayButton" parent="DefaultButton">
        <item name="android:background">@drawable/selector_button_blue_gray</item>
    </style>

    <!--Style Button KeyBoard-->
    <style name="BtnNumberStyle" parent="@style/Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">45sp</item>
    </style>

    <style name="HeaderTextView" />
    <style name="BodyTextView" />

    <style name="OrangeButton" parent="DefaultButton">
        <item name="android:background">@drawable/selector_button_yellow</item>
    </style>

    <!-- Header Black -->
    <style name="HeaderTextView.Black" parent="HeaderTextView">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <!-- Body Black -->
    <style name="BodyTextView.Black" parent="BodyTextView">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <!-- Body White -->
    <style name="BodyTextView.White" parent="BodyTextView">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="HeaderTextView.Black.Large" parent="HeaderTextView.Black">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="BodyTextView.Black.Normal" parent="BodyTextView.Black">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BodyTextView.White.Normal" parent="BodyTextView.White">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">10dp</item>
    </style>

</resources>
