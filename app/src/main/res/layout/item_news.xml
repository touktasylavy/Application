<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DefaultCardView"
    android:id="@+id/cardViewClick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/default_margin_padding_normal"
    android:layout_marginLeft="@dimen/default_margin_padding_extra_large"
    android:layout_marginRight="@dimen/default_margin_padding_extra_large"
    android:layout_marginTop="@dimen/default_margin_padding_large">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imvShow"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:background="@drawable/item_up"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="2"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="11dp"
                android:paddingTop="8dp"
                android:singleLine="true"
                android:text="@null"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date_post"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/default_margin_padding_normal"
                android:layout_marginLeft="@dimen/default_margin_padding_large"
                android:layout_marginRight="@dimen/default_margin_padding_large"
                android:layout_marginTop="@dimen/default_margin_padding_normal"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center_horizontal"
                android:paddingBottom="2dp"
                android:paddingLeft="@dimen/default_margin_padding_normal"
                android:paddingRight="@dimen/default_margin_padding_normal"
                android:paddingTop="2dp"
                android:text="@null"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="11dp"
            android:singleLine="true"
            android:textSize="14sp"
            android:text="@null" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimary" />

</android.support.v7.widget.CardView>
