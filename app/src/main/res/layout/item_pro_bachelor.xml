<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DefaultCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/default_margin_padding_normal"
    android:layout_marginLeft="@dimen/default_margin_padding_extra_large"
    android:layout_marginRight="@dimen/default_margin_padding_extra_large"
    android:layout_marginTop="@dimen/default_margin_padding_large">

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="0dp"
            fontPath="fonts/DroidSans-Bold.ttf"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center_horizontal|center_vertical"
            android:text="1"
            android:textColor="@color/colorPrimary"
            android:textSize="45sp"
            tools:ignore="MissingPrefix" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_program_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_padding_normal"
                android:layout_marginLeft="@dimen/default_margin_padding_large"
                android:layout_marginRight="@dimen/default_margin_padding_large"
                android:layout_marginTop="@dimen/default_margin_padding_normal"
                android:text="ຕຶກ:"
                android:textColor="@color/colorPrimaryDark" />


            <TextView
                android:id="@+id/tv_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_padding_normal"
                android:layout_marginLeft="@dimen/default_margin_padding_large"
                android:layout_marginRight="@dimen/default_margin_padding_large"
                android:layout_marginTop="@dimen/default_margin_padding_normal"
                android:text="ໄລຍະການຮຽນ:"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tv_dept_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_padding_normal"
                android:layout_marginLeft="@dimen/default_margin_padding_large"
                android:layout_marginRight="@dimen/default_margin_padding_large"
                android:layout_marginTop="@dimen/default_margin_padding_normal"
                android:text="ພາກວິຊາ:"
                android:textColor="@color/colorPrimaryDark" />


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
