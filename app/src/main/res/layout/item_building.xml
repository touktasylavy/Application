<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DefaultCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/default_margin_padding_normal"
    android:layout_marginLeft="@dimen/default_margin_padding_extra_large"
    android:layout_marginRight="@dimen/default_margin_padding_extra_large"
    android:layout_marginTop="@dimen/default_margin_padding_large">

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center_horizontal|center_vertical"
            android:text="1"
            fontPath="fonts/DroidSans-Bold.ttf"
            android:textColor="@color/colorPrimary"
            android:textSize="45sp"
            tools:ignore="MissingPrefix" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_building_name"
                fontPath="fonts/Narin.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_padding_normal"
                android:layout_marginLeft="@dimen/default_margin_padding_large"
                android:layout_marginRight="@dimen/default_margin_padding_large"
                android:layout_marginTop="@dimen/default_margin_padding_normal"
                android:paddingLeft="@dimen/default_margin_padding_large"
                android:paddingRight="@dimen/default_margin_padding_large"
                android:text="@null"
                android:background="@drawable/border"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="MissingPrefix" />


            <TextView
                android:id="@+id/tv_dept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin_padding_normal"
                android:layout_marginLeft="@dimen/default_margin_padding_large"
                android:layout_marginRight="@dimen/default_margin_padding_large"
                android:layout_marginTop="@dimen/default_margin_padding_normal"
                android:text="ພາກວິຊາ:"
                android:textColor="@color/colorPrimaryDark" />


        </LinearLayout>

        <Button
            android:id="@+id/btn_view_map"
            style="@style/BlueButton"
            fontPath="fonts/DroidSans-Bold.ttf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_pin_drop_white_36dp"
            android:paddingLeft="20dp"
            android:layout_weight="1.2"
            android:textSize="@dimen/sp_16"
            tools:ignore="MissingPrefix" />

    </LinearLayout>

</android.support.v7.widget.CardView>
