<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_head"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/profile_image_circle"
        android:src="@drawable/ic_app"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/username"
        android:layout_alignLeft="@id/profile_image_circle"
        android:layout_alignStart="@id/profile_image_circle"
        android:gravity="start"
        android:paddingBottom="4dp"
        android:text="FEN Application"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/display_name"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@id/display_name"
        android:layout_marginBottom="8dp"
        android:gravity="start"
        android:text="ແນະນຳຂໍ້ມູນກ່ຽວກັບ ຄະນະວິສະວະກຳສາດ"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary" />
</RelativeLayout>